<resources>

    <!-- Parent Theme -->

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">?themePrimaryColor</item>
        <item name="colorPrimaryDark">?themePrimaryColor</item>
        <item name="colorAccent">?themePrimaryColor</item>
        <item name="android:windowBackground">?themeBackgroundColor</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="themeAppNameFont">@style/FontAppName</item>
        <item name="themeTitleFont">@style/FontTitle</item>
        <item name="themeRegularFont">@style/FontRegular</item>
        <item name="themeRegularBoldFont">@style/FontRegularBold</item>
        <item name="themeSmallFont">@style/FontSmall</item>
        <item name="themeRegularClickableFont">@style/FontRegularClickable</item>
        <item name="themeRegularClickableBoldFont">@style/FontRegularBoldClickable</item>
        <item name="themeSmallClickableFont">@style/FontSmallClickable</item>
        <item name="themeLargeFont">@style/FontLarge</item>
        <item name="themeHugeBoldFont">@style/FontHugeBold</item>
        <item name="themeButtonPrimary">@style/ButtonPrimary</item>
        <item name="themeButtonSecondary">@style/ButtonSecondary</item>
        <item name="themeButtonBorderPrimary">@style/ButtonBorderPrimary</item>
        <item name="themeButtonBorderSecondary">@style/ButtonBorderSecondary</item>
        <item name="themeButtonBorderNegative">@style/ButtonBorderNegative</item>
        <item name="themeRegularCheckBox">@style/CheckBoxRegular</item>
    </style>

    <style name="DefaultAppTheme">
        <item name="themeBackgroundColor">@color/black</item>
        <item name="themeCardColor">@color/blackLight</item>
        <item name="themeCardTransparentColor">@color/blackLightTransparent80</item>
        <item name="themeDividerColor">@color/whiteTransparent12</item>
        <item name="themeContentColor">@color/white</item>
        <item name="themeContentTransparentColor">@color/whiteTransparent36</item>
        <item name="themeBackgroundTransparent100Color">@color/black</item>
        <item name="themeBackgroundTransparent86Color">@color/blackTransparent86</item>
        <item name="themeBackgroundTransparent50Color">@color/blackTransparent50</item>
        <item name="themeBackgroundTransparent36Color">@color/blackTransparent36</item>
        <item name="themeBackgroundTransparent0Color">@color/blackTransparent0</item>
    </style>

    <style name="LightAppTheme">
        <item name="themeBackgroundColor">@color/white</item>
        <item name="themeCardColor">@color/whiteLight</item>
        <item name="themeCardTransparentColor">@color/whiteLightTransparent80</item>
        <item name="themeDividerColor">@color/blackTransparent12</item>
        <item name="themeContentColor">@color/black</item>
        <item name="themeContentTransparentColor">@color/blackTransparent36</item>
        <item name="themeBackgroundTransparent100Color">@color/white</item>
        <item name="themeBackgroundTransparent86Color">@color/whiteTransparent86</item>
        <item name="themeBackgroundTransparent50Color">@color/whiteTransparent50</item>
        <item name="themeBackgroundTransparent36Color">@color/whiteTransparent36</item>
        <item name="themeBackgroundTransparent0Color">@color/whiteTransparent0</item>
    </style>

    <style name="DarkAppTheme">
        <item name="themeBackgroundColor">@color/pureBlack</item>
        <item name="themeCardColor">@color/pureBlackLight</item>
        <item name="themeCardTransparentColor">@color/pureBlackLightTransparent80</item>
        <item name="themeDividerColor">@color/whiteTransparent12</item>
        <item name="themeContentColor">@color/white</item>
        <item name="themeContentTransparentColor">@color/whiteTransparent36</item>
        <item name="themeBackgroundTransparent100Color">@color/pureBlack</item>
        <item name="themeBackgroundTransparent86Color">@color/pureBlackTransparent86</item>
        <item name="themeBackgroundTransparent50Color">@color/pureBlackTransparent50</item>
        <item name="themeBackgroundTransparent36Color">@color/pureBlackTransparent36</item>
        <item name="themeBackgroundTransparent0Color">@color/pureBlackTransparent0</item>
    </style>

    <!-- Default Theme -->

    <style name="AppTheme.ThemeYellow" parent="DefaultAppTheme">
        <item name="themePrimaryColor">@color/yellow</item>
        <item name="themeSecondaryColor">@color/cyan</item>
        <item name="themeSecondaryTransparentColor">@color/cyanTransparent50</item>
        <item name="themeSecondaryTransparent20Color">@color/cyanTransparent20</item>
        <item name="themeNegativeColor">@color/magentaDark</item>
    </style>

    <style name="AppTheme.ThemeGreen" parent="DefaultAppTheme">
        <item name="themePrimaryColor">@color/green</item>
        <item name="themeSecondaryColor">@color/lavender</item>
        <item name="themeSecondaryTransparentColor">@color/lavenderTransparent50</item>
        <item name="themeSecondaryTransparent20Color">@color/lavenderTransparent20</item>
        <item name="themeNegativeColor">@color/brown</item>
    </style>

    <style name="AppTheme.ThemeBlue" parent="DefaultAppTheme">
        <item name="themePrimaryColor">@color/blue</item>
        <item name="themeSecondaryColor">@color/cream</item>
        <item name="themeSecondaryTransparentColor">@color/creamTransparent50</item>
        <item name="themeSecondaryTransparent20Color">@color/creamTransparent20</item>
        <item name="themeNegativeColor">@color/gold</item>
    </style>

    <style name="AppTheme.ThemePink" parent="DefaultAppTheme">
        <item name="themePrimaryColor">@color/pink</item>
        <item name="themeSecondaryColor">@color/sunshine</item>
        <item name="themeSecondaryTransparentColor">@color/sunshineTransparent50</item>
        <item name="themeSecondaryTransparent20Color">@color/sunshineTransparent20</item>
        <item name="themeNegativeColor">@color/jade</item>
    </style>

    <style name="AppTheme.ThemeRed" parent="DefaultAppTheme">
        <item name="themePrimaryColor">@color/red</item>
        <item name="themeSecondaryColor">@color/aloevera</item>
        <item name="themeSecondaryTransparentColor">@color/aloeveraTransparent50</item>
        <item name="themeSecondaryTransparent20Color">@color/aloeveraTransparent20</item>
        <item name="themeNegativeColor">@color/purple</item>
    </style>

    <!-- Light Theme -->

    <style name="AppTheme.ThemeLightYellow" parent="LightAppTheme">
        <item name="themePrimaryColor">@color/lightThemeYellow</item>
        <item name="themeSecondaryColor">@color/lightThemeCyan</item>
        <item name="themeSecondaryTransparentColor">@color/lightThemeCyanTransparent50</item>
        <item name="themeSecondaryTransparent20Color">@color/lightThemeCyanTransparent20</item>
        <item name="themeNegativeColor">@color/lightThemeMagentaDark</item>
    </style>

    <style name="AppTheme.ThemeLightGreen" parent="LightAppTheme">
        <item name="themePrimaryColor">@color/lightGreen</item>
        <item name="themeSecondaryColor">@color/lightLavender</item>
        <item name="themeSecondaryTransparentColor">@color/lightLavenderTransparent50</item>
        <item name="themeSecondaryTransparent20Color">@color/lightLavenderTransparent20</item>
        <item name="themeNegativeColor">@color/lightBrown</item>
    </style>

    <style name="AppTheme.ThemeLightBlue" parent="LightAppTheme">
        <item name="themePrimaryColor">@color/lightBlue</item>
        <item name="themeSecondaryColor">@color/lightCream</item>
        <item name="themeSecondaryTransparentColor">@color/lightCreamTransparent50</item>
        <item name="themeSecondaryTransparent20Color">@color/lightCreamTransparent20</item>
        <item name="themeNegativeColor">@color/lightGold</item>
    </style>

    <style name="AppTheme.ThemeLightPink" parent="LightAppTheme">
        <item name="themePrimaryColor">@color/lightPink</item>
        <item name="themeSecondaryColor">@color/lightSunshine</item>
        <item name="themeSecondaryTransparentColor">@color/lightSunshineTransparent50</item>
        <item name="themeSecondaryTransparent20Color">@color/lightSunshineTransparent20</item>
        <item name="themeNegativeColor">@color/lightJade</item>
    </style>

    <style name="AppTheme.ThemeLightRed" parent="LightAppTheme">
        <item name="themePrimaryColor">@color/lightRed</item>
        <item name="themeSecondaryColor">@color/lightAloevera</item>
        <item name="themeSecondaryTransparentColor">@color/lightAloeveraTransparent50</item>
        <item name="themeSecondaryTransparent20Color">@color/lightAloeveraTransparent20</item>
        <item name="themeNegativeColor">@color/lightPurple</item>
    </style>

    <!-- Dark Theme -->

    <style name="AppTheme.ThemeDarkYellow" parent="DarkAppTheme">
        <item name="themePrimaryColor">@color/yellow</item>
        <item name="themeSecondaryColor">@color/cyan</item>
        <item name="themeSecondaryTransparentColor">@color/cyanTransparent50</item>
        <item name="themeSecondaryTransparent20Color">@color/cyanTransparent20</item>
        <item name="themeNegativeColor">@color/magentaDark</item>
    </style>

    <style name="AppTheme.ThemeDarkGreen" parent="DarkAppTheme">
        <item name="themePrimaryColor">@color/green</item>
        <item name="themeSecondaryColor">@color/lavender</item>
        <item name="themeSecondaryTransparentColor">@color/lavenderTransparent50</item>
        <item name="themeSecondaryTransparent20Color">@color/lavenderTransparent20</item>
        <item name="themeNegativeColor">@color/brown</item>
    </style>

    <style name="AppTheme.ThemeDarkBlue" parent="DarkAppTheme">
        <item name="themePrimaryColor">@color/blue</item>
        <item name="themeSecondaryColor">@color/cream</item>
        <item name="themeSecondaryTransparentColor">@color/creamTransparent50</item>
        <item name="themeSecondaryTransparent20Color">@color/creamTransparent20</item>
        <item name="themeNegativeColor">@color/gold</item>
    </style>

    <style name="AppTheme.ThemeDarkPink" parent="DarkAppTheme">
        <item name="themePrimaryColor">@color/pink</item>
        <item name="themeSecondaryColor">@color/sunshine</item>
        <item name="themeSecondaryTransparentColor">@color/sunshineTransparent50</item>
        <item name="themeSecondaryTransparent20Color">@color/sunshineTransparent20</item>
        <item name="themeNegativeColor">@color/jade</item>
    </style>

    <style name="AppTheme.ThemeDarkRed" parent="DarkAppTheme">
        <item name="themePrimaryColor">@color/red</item>
        <item name="themeSecondaryColor">@color/aloevera</item>
        <item name="themeSecondaryTransparentColor">@color/aloeveraTransparent50</item>
        <item name="themeSecondaryTransparent20Color">@color/aloeveraTransparent20</item>
        <item name="themeNegativeColor">@color/purple</item>
    </style>

    <!-- Community Theme -->

    <style name="AppTheme.ThemeAxielBlue" parent="DefaultAppTheme">
        <item name="themePrimaryColor">@color/axielBlue</item>
        <item name="themeSecondaryColor">@color/axielLightBlue</item>
        <item name="themeSecondaryTransparentColor">@color/axielLightBlueTransparent50</item>
        <item name="themeSecondaryTransparent20Color">@color/axielLightBlueTransparent20</item>
        <item name="themeNegativeColor">@color/axielRed</item>
    </style>

    <style name="AppTheme.ThemeSamOrange" parent="DefaultAppTheme">
        <item name="themePrimaryColor">@color/samOrange</item>
        <item name="themeSecondaryColor">@color/samGreen</item>
        <item name="themeSecondaryTransparentColor">@color/samGreenTransparent50</item>
        <item name="themeSecondaryTransparent20Color">@color/samGreenTransparent20</item>
        <item name="themeNegativeColor">@color/samBlue</item>
    </style>

    <style name="AppTheme.ThemeDarkAxielBlue" parent="DarkAppTheme">
        <item name="themePrimaryColor">@color/axielBlue</item>
        <item name="themeSecondaryColor">@color/axielLightBlue</item>
        <item name="themeSecondaryTransparentColor">@color/axielLightBlueTransparent50</item>
        <item name="themeSecondaryTransparent20Color">@color/axielLightBlueTransparent20</item>
        <item name="themeNegativeColor">@color/axielRed</item>
    </style>

    <style name="AppTheme.ThemeDarkSamOrange" parent="DarkAppTheme">
        <item name="themePrimaryColor">@color/samOrange</item>
        <item name="themeSecondaryColor">@color/samGreen</item>
        <item name="themeSecondaryTransparentColor">@color/samGreenTransparent50</item>
        <item name="themeSecondaryTransparent20Color">@color/samGreenTransparent20</item>
        <item name="themeNegativeColor">@color/samBlue</item>
    </style>

    <!-- Font -->

    <style name="FontAppName">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">@dimen/fontBig</item>
        <item name="android:textColor">?themePrimaryColor</item>
    </style>

    <style name="FontTitle">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">@dimen/fontBig</item>
        <item name="android:textColor">?themeContentColor</item>
    </style>

    <style name="FontRegular">
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">@dimen/fontNormal</item>
        <item name="android:textColor">?themeContentColor</item>
    </style>

    <style name="FontRegularBold">
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textSize">@dimen/fontNormal</item>
        <item name="android:textColor">?themeContentColor</item>
    </style>

    <style name="FontSmall">
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">@dimen/fontSmall</item>
        <item name="android:textColor">?themeContentColor</item>
    </style>

    <style name="FontRegularClickable">
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">@dimen/fontNormal</item>
        <item name="android:textColor">?themePrimaryColor</item>
    </style>

    <style name="FontRegularBoldClickable">
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textSize">@dimen/fontNormal</item>
        <item name="android:textColor">?themePrimaryColor</item>
    </style>

    <style name="FontSmallClickable">
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">@dimen/fontSmall</item>
        <item name="android:textColor">?themePrimaryColor</item>
    </style>

    <style name="FontLarge">
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">@dimen/fontLarge</item>
        <item name="android:textColor">?themeContentColor</item>
    </style>

    <style name="FontHugeBold">
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textSize">@dimen/fontHuge</item>
        <item name="android:textColor">?themeContentColor</item>
    </style>

    <!-- Button -->

    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?themePrimaryColor</item>
        <item name="android:textColor">?themeBackgroundColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?themeSecondaryColor</item>
        <item name="android:textColor">?themeBackgroundColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="ButtonBorderPrimary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">@dimen/lineWidth</item>
        <item name="strokeColor">?themePrimaryColor</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">?themePrimaryColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="ButtonBorderSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">@dimen/lineWidth</item>
        <item name="strokeColor">?themeSecondaryColor</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">?themeSecondaryColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="ButtonBorderNegative" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">@dimen/lineWidth</item>
        <item name="strokeColor">?themeNegativeColor</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">?themeNegativeColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Others -->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CheckBoxRegular" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonCompat">@drawable/custom_checkbox</item>
        <item name="android:buttonTint">?themePrimaryColor</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/marginNormal</item>
        <item name="cornerSizeTopLeft">@dimen/marginNormal</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- Spoiler Activity -->

    <style name="Theme.MaterialComponents.NoActionBar.Translucent" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

</resources>
