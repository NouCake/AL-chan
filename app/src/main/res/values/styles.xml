<resources>

    <!-- Parent Theme -->

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">?themePrimaryColor</item>
        <item name="colorPrimaryDark">?themePrimaryColor</item>
        <item name="colorAccent">?themePrimaryColor</item>
        <item name="android:windowBackground">?themeBackgroundColor</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="themeTitleFont">@style/FontTitle</item>
        <item name="themeRegularFont">@style/FontRegular</item>
        <item name="themeRegularBoldFont">@style/FontRegularBold</item>
        <item name="themeSmallFont">@style/FontSmall</item>
        <item name="themeSmallClickableFont">@style/FontSmallClickable</item>
    </style>
    
    <style name="DefaultAppTheme">
        <item name="themeBackgroundColor">@color/black</item>
        <item name="themeBackgroundTransparent50Color">@color/blackTransparent50</item>
        <item name="themeCardColor">@color/blackLight</item>
        <item name="themeDividerColor">@color/whiteTransparent12</item>
        <item name="themeContentColor">@color/white</item>
        <item name="themeContentTransparentColor">@color/whiteTransparent36</item>
    </style>
    
    <style name="AppTheme.ThemeDefaultYellow" parent="DefaultAppTheme">
        <item name="themePrimaryColor">@color/yellow</item>
        <item name="themeSecondaryColor">@color/cyan</item>
        <item name="themeNegativeColor">@color/magentaDark</item>
    </style>

    <style name="FontTitle">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">@dimen/fontBig</item>
        <item name="android:textColor">?themeContentColor</item>
    </style>
    
    <style name="FontRegular">
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">@dimen/fontNormal</item>
        <item name="android:textColor">?themeContentColor</item>
    </style>

    <style name="FontRegularBold">
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textSize">@dimen/fontNormal</item>
        <item name="android:textColor">?themeContentColor</item>
    </style>

    <style name="FontSmall">
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">@dimen/fontSmall</item>
        <item name="android:textColor">?themeContentColor</item>
    </style>

    <style name="FontSmallClickable">
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">@dimen/fontSmall</item>
        <item name="android:textColor">?themePrimaryColor</item>
    </style>
</resources>
