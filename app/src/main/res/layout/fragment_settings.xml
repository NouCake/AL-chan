<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

    <include layout="@layout/toolbar_default"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/appSettingsLayout"
                android:paddingHorizontal="@dimen/marginPageBig"
                android:paddingVertical="@dimen/marginNormal"
                android:foreground="?selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appSettingsIcon"
                    app:srcCompat="@drawable/ic_phonelink_setup"
                    app:tint="?themeContentColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/appSettingsTitle"
                    android:text="@string/app_settings"
                    style="?themeRegularFont"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/appSettingsIcon"
                    app:layout_constraintEnd_toStartOf="@id/appSettingsArrowIcon"
                    android:layout_marginHorizontal="@dimen/marginPageBig"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textview.MaterialTextView
                    android:text="@string/personalise_al_chan_to_suit_your_taste"
                    style="?themeSmallFont"
                    app:layout_constraintTop_toBottomOf="@id/appSettingsTitle"
                    app:layout_constraintStart_toEndOf="@id/appSettingsIcon"
                    app:layout_constraintEnd_toStartOf="@id/appSettingsArrowIcon"
                    android:layout_marginHorizontal="@dimen/marginPageBig"
                    android:layout_marginTop="@dimen/marginClose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appSettingsArrowIcon"
                    app:srcCompat="@drawable/ic_chevron_right"
                    app:tint="?themeContentColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <include layout="@layout/divider"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/aniListSettingsLayout"
                android:paddingHorizontal="@dimen/marginPageBig"
                android:paddingVertical="@dimen/marginNormal"
                android:foreground="?selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/aniListSettingsIcon"
                    app:srcCompat="@drawable/ic_laptop_settings"
                    app:tint="?themeContentColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/aniListSettingsTitle"
                    android:text="@string/anilist_settings"
                    style="?themeRegularFont"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/aniListSettingsIcon"
                    app:layout_constraintEnd_toStartOf="@id/aniListSettingsArrowIcon"
                    android:layout_marginHorizontal="@dimen/marginPageBig"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textview.MaterialTextView
                    android:text="@string/modify_anilist_settings"
                    style="?themeSmallFont"
                    app:layout_constraintTop_toBottomOf="@id/aniListSettingsTitle"
                    app:layout_constraintStart_toEndOf="@id/aniListSettingsIcon"
                    app:layout_constraintEnd_toStartOf="@id/aniListSettingsArrowIcon"
                    android:layout_marginHorizontal="@dimen/marginPageBig"
                    android:layout_marginTop="@dimen/marginClose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/aniListSettingsArrowIcon"
                    app:srcCompat="@drawable/ic_chevron_right"
                    app:tint="?themeContentColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <include layout="@layout/divider"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/listSettingsLayout"
                android:paddingHorizontal="@dimen/marginPageBig"
                android:paddingVertical="@dimen/marginNormal"
                android:foreground="?selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/listSettingsIcon"
                    app:srcCompat="@drawable/ic_folder_settings"
                    app:tint="?themeContentColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/listSettingsTitle"
                    android:text="@string/list_settings"
                    style="?themeRegularFont"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/listSettingsIcon"
                    app:layout_constraintEnd_toStartOf="@id/listSettingsArrowIcon"
                    android:layout_marginHorizontal="@dimen/marginPageBig"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textview.MaterialTextView
                    android:text="@string/configure_your_lists"
                    style="?themeSmallFont"
                    app:layout_constraintTop_toBottomOf="@id/listSettingsTitle"
                    app:layout_constraintStart_toEndOf="@id/listSettingsIcon"
                    app:layout_constraintEnd_toStartOf="@id/listSettingsArrowIcon"
                    android:layout_marginHorizontal="@dimen/marginPageBig"
                    android:layout_marginTop="@dimen/marginClose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/listSettingsArrowIcon"
                    app:srcCompat="@drawable/ic_chevron_right"
                    app:tint="?themeContentColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <include layout="@layout/divider"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/notificationsSettingsLayout"
                android:paddingHorizontal="@dimen/marginPageBig"
                android:paddingVertical="@dimen/marginNormal"
                android:foreground="?selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/notificationsSettingsIcon"
                    app:srcCompat="@drawable/ic_alarm"
                    app:tint="?themeContentColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/notificationsSettingsTitle"
                    android:text="@string/notifications_settings"
                    style="?themeRegularFont"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/notificationsSettingsIcon"
                    app:layout_constraintEnd_toStartOf="@id/notificationsSettingsArrowIcon"
                    android:layout_marginHorizontal="@dimen/marginPageBig"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textview.MaterialTextView
                    android:text="@string/set_how_you_want_to_be_notified"
                    style="?themeSmallFont"
                    app:layout_constraintTop_toBottomOf="@id/notificationsSettingsTitle"
                    app:layout_constraintStart_toEndOf="@id/notificationsSettingsIcon"
                    app:layout_constraintEnd_toStartOf="@id/notificationsSettingsArrowIcon"
                    android:layout_marginHorizontal="@dimen/marginPageBig"
                    android:layout_marginTop="@dimen/marginClose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/notificationsSettingsArrowIcon"
                    app:srcCompat="@drawable/ic_chevron_right"
                    app:tint="?themeContentColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <include layout="@layout/divider"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/accountSettingsLayout"
                android:paddingHorizontal="@dimen/marginPageBig"
                android:paddingVertical="@dimen/marginNormal"
                android:foreground="?selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/accountSettingsIcon"
                    app:srcCompat="@drawable/ic_admin_settings_male"
                    app:tint="?themeContentColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/accountSettingsTitle"
                    android:text="@string/account_settings"
                    style="?themeRegularFont"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/accountSettingsIcon"
                    app:layout_constraintEnd_toStartOf="@id/accountSettingsArrowIcon"
                    android:layout_marginHorizontal="@dimen/marginPageBig"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textview.MaterialTextView
                    android:text="@string/manage_your_account"
                    style="?themeSmallFont"
                    app:layout_constraintTop_toBottomOf="@id/accountSettingsTitle"
                    app:layout_constraintStart_toEndOf="@id/accountSettingsIcon"
                    app:layout_constraintEnd_toStartOf="@id/accountSettingsArrowIcon"
                    android:layout_marginHorizontal="@dimen/marginPageBig"
                    android:layout_marginTop="@dimen/marginClose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/accountSettingsArrowIcon"
                    app:srcCompat="@drawable/ic_chevron_right"
                    app:tint="?themeContentColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <include layout="@layout/divider"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/aboutLayout"
                android:paddingHorizontal="@dimen/marginPageBig"
                android:paddingVertical="@dimen/marginNormal"
                android:foreground="?selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/aboutIcon"
                    app:srcCompat="@drawable/ic_help"
                    app:tint="?themeContentColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/aboutTitle"
                    android:text="@string/about_al_chan"
                    style="?themeRegularFont"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/aboutIcon"
                    app:layout_constraintEnd_toStartOf="@id/aboutArrowIcon"
                    android:layout_marginHorizontal="@dimen/marginPageBig"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textview.MaterialTextView
                    android:text="@string/know_more_about_al_chan"
                    style="?themeSmallFont"
                    app:layout_constraintTop_toBottomOf="@id/aboutTitle"
                    app:layout_constraintStart_toEndOf="@id/aboutIcon"
                    app:layout_constraintEnd_toStartOf="@id/aboutArrowIcon"
                    android:layout_marginHorizontal="@dimen/marginPageBig"
                    android:layout_marginTop="@dimen/marginClose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/aboutArrowIcon"
                    app:srcCompat="@drawable/ic_chevron_right"
                    app:tint="?themeContentColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <include layout="@layout/divider"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>