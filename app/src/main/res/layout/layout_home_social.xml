<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/marginFar"
    android:layout_marginHorizontal="@dimen/marginPageNormal"
    app:cardBackgroundColor="?themeCardColor"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingHorizontal="@dimen/marginPageBig"
        android:paddingBottom="@dimen/marginPageNormal"
        android:paddingTop="@dimen/marginFar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/homeSocialText"
            style="?themeRegularBoldFont"
            app:layout_constraintBottom_toTopOf="@id/homeSocialJoinButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="@dimen/marginNormal"
            android:text="@string/see_what_s_everyone_up_to_get_yourself_involved_with_the_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/homeSocialJoinButton"
            android:text="@string/visit_social_hub"
            style="?themePrimaryBorderButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>